generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Reviews {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model TopCategory {
  id         Int        @id @default(autoincrement())
  name       String
  createdAt  DateTime   @default(now())
  updateAt   DateTime   @updatedAt
  categories Category[]
}

model Category {
  id            Int          @id @default(autoincrement())
  name          String
  image         String
  createdAt     DateTime     @default(now())
  updateAt      DateTime     @updatedAt
  topCategory   TopCategory? @relation(fields: [topCategoryId], references: [id], onDelete: Cascade)
  topCategoryId Int?
  products      Product[]
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  feature     String
  price       String
  brand       String
  image       String[]
  createdAt   DateTime  @default(now())
  updateAt    DateTime  @updatedAt
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId  Int?
}

model Sertificate {
  id        Int      @id @default(autoincrement())
  name      String
  image     String
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model License {
  id        Int      @id @default(autoincrement())
  name      String
  image     String
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model News {
  id        Int      @id @default(autoincrement())
  name      String
  image     String
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Partner {
  id        Int      @id @default(autoincrement())
  name      String
  image     String
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  password  String
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Currency {
  id        Int      @id @default(autoincrement())
  sum       String
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Banner {
  id            Int      @id @default(autoincrement())
  image         String
  topCategoryId Int?
  categoryId    Int?
  productId     Int?
  createdAt     DateTime @default(now())
  updateAt      DateTime @updatedAt
}

model SelectReview {
  id        Int      @id @default(autoincrement())
  reviewId  Int?
  name      String
  phone     String
  email     String
  message   String
  createdAt DateTime @default(now())
}
